<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QualityElectronics</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QualityElectronics.styles.css" asp-append-version="true"/>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
</head>
<body>
    @RenderBody()
    <header>
        <div class="nav_container">
            <nav class="header1">
                <a href="Index"><img class="logo" src="../Images/Logo1.png"></a>
                <form class="buscador">
                    <input type="search" placeholder="Buscar productos" aria-label="Search">
                    <button class="lupa" type="submit"><img src="../Images/lupa.png" class="lupa_img"></button>
                </form>
                <div class="usuario">
                    <a href="MiCuenta"><img class="user_img" src="../Images/img_perfil.png"></a>
                    <p class="nombre_usuario">Nombre Usuario</p>
                    <button class="desplegable"><img src="../Images/down_arrow.png"></button>
                </div>
                <button class="carrito"><img src="../Images/carrito.png"></button>
            </nav>
        </div>
        <div class="nav_container2">
            <nav class="header2">
                <ul>
                    <li><a href="">PRODUCTOS</a>
                    <li><a href="">NOTEBOOKS</a>
                    <li><a href="">PERIFÉRICOS</a>
                    <li><a href="">QUIERO UNA COMPU</a>
                    <li><a href="">AYUDA</a>
                </ul>
            </nav>
        </div>
    </header>

    <footer>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
