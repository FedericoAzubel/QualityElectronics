<section class="contenedorAnimado">
    @{
        for(int i = 0; i < 259; i++)
        {
        <span class="cubo"></span>
        }
    }
    <form action='@Url.Action("VerificarSignUp", "Auth")' method="post" class="signUp_form">
        <h1 class="signUp_title">REGISTRARSE</h1>
        @if(ViewBag.Error != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Error
            </div>
        }
        <div class="signUp_inputs">
            <input type="text" placeholder="Nombre" required name="nombre" class="name input_border" autocomplete="off">
            <input type="text" placeholder="Apellido" required name="apellido" class="surname input_border" autocomplete="off">
            <input type="email" placeholder="Email" required name="email" class="mail input_border" autocomplete="off">
            <input type="number" placeholder="Número de teléfono" required name="tel" class="phone input_border" autocomplete="off">
            <input type="password" placeholder="Contraseña" required name="contrasena" class="password input_border" autocomplete="off">
            <input type="password" placeholder="Repetir contraseña" required name="rep_contra" class="password2 input_border" autocomplete="off">
            <input type="submit" value="Registrarse" class="signUp_submit">
        </div>
    </form>
</section>