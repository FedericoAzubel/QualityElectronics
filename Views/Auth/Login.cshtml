<section class="contenedorAnimado">
  @{
    for(int i = 0; i < 259; i++)
    {
      <span class="cubo"></span>
    }
  }
  <form action='@Url.Action("VerificarLogin", "Auth")' method="post" class="signUp_form">
    <h1 class="signUp_title">INICIAR SESIÓN</h1>
    @if(ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }
    <div class="signIn_inputs">
        <div class="inputs_a">
          <input type="email" placeholder="Email" required name="email" class="mail input_border" autocomplete="off">
          <input type="password" placeholder="Contraseña" required name="password" class="password_login input_border" autocomplete="off">
          <a href='@Url.Action("SignUp", "Auth")'>No tienes una cuenta, registrate aquí</a>
        </div>
        <input type="submit" value="Iniciar" class="signUp_submit">
    </div>
  </form>
</section>