<section class="contenedor">
    <section class="seccion">
        <div class="nombre_sección">
            <div class="img_nombre">
                <button onclick="window.history.back()"><img src="../Images/chevron_left.png"></button>
                <h1>Mis Preguntas</h1>
            </div>
            <div class="linea"></div>
        </div>

        <div class="cuenta_option dom_agregado">
            <div class="nombre_sección2">
                <p>Preguntas</p>
                <div class="linea"></div>
            </div>
            @{
                if(ViewBag.ListaPreguntas.Count != 0)
                {
                    foreach(Preguntas_Motivo pregunta in ViewBag.ListaPreguntas)
                    {
                        <div class="pregunta">
                        <p class="motivo_preguntinia">Motivo:</p>
                        <p>@pregunta.Motivo</p>
                        <p class="motivo_preguntinia">Pregunta:</p>
                        <p>@pregunta.Contenido</p>
                    </div>
                    }
                }
                else
                {
                    <div class="cuenta_mensaje">
                        <p>No tienes preguntas cargados</p>
                    </div>
                } 
            }
    </section>
</section>